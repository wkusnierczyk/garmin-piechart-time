<settings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://developer.garmin.com/downloads/connect-iq/resources.xsd">

    <setting propertyKey="@Properties.ShowStandardTime" title="@Strings.StandardTimeMenuTitle">
        <settingConfig type="boolean" />
    </setting>

    <setting propertyKey="@Properties.ShowSeconds" title="@Strings.ShowSecondsMenuTitle">
        <settingConfig type="boolean" />
    </setting>

    <setting propertyKey="@Properties.Layout" title="@Strings.LayoutMenuTitile">
        <settingConfig type="list">
            <listEntry value="0">@Strings.LayoutConcentric</listEntry>
            <listEntry value="1">@Strings.LayoutHorizontal</listEntry>
            <listEntry value="2">@Strings.LayoutStacked</listEntry>
            <listEntry value="3">@Strings.LayoutDiminishing</listEntry>
        </settingConfig>
    </setting>

    <setting propertyKey="@Properties.Theme" title="@Strings.ThemeMenuTitile">
        <settingConfig type="list">
            <listEntry value="0">@Strings.ThemeMonochrome</listEntry>
            <listEntry value="1">@Strings.ThemeFrench</listEntry>
            <listEntry value="2">@Strings.ThemeItalian</listEntry>
            <listEntry value="3">@Strings.ThemeRed</listEntry>
            <listEntry value="4">@Strings.ThemeOrange</listEntry>
            <listEntry value="5">@Strings.ThemeOcean</listEntry>
        </settingConfig>
    </setting>

</settings>
